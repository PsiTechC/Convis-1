# ==================== Database Configuration ====================
MONGO_URL=mongodb://localhost:27017
MONGO_DB=convis_db

# ==================== Redis Configuration ====================
REDIS_URL=redis://localhost:6379

# ==================== Twilio Configuration ====================
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here

# Your publicly accessible base URL (for webhooks)
BASE_URL=https://your-domain.com

# Webhook URLs (auto-constructed from BASE_URL if not set)
OUTBOUND_TWIML_URL=${BASE_URL}/api/twilio-webhooks/outbound-call
TW_STATUS_CALLBACK=${BASE_URL}/api/twilio-webhooks/call-status
TW_RECORDING_CALLBACK=${BASE_URL}/api/twilio-webhooks/recording

# ==================== OpenAI Configuration ====================
OPENAI_API_KEY=your_openai_api_key_here

# ==================== Google Calendar OAuth ====================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=${BASE_URL}/api/calendar/google/callback

# ==================== Microsoft Calendar OAuth ====================
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=${BASE_URL}/api/calendar/microsoft/callback

# ==================== JWT Configuration ====================
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ==================== Email Configuration (for notifications) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# ==================== Application Configuration ====================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ==================== Campaign Configuration ====================
# Default timezone for campaigns
DEFAULT_TIMEZONE=America/New_York

# Maximum concurrent calls per campaign
MAX_CONCURRENT_CALLS=1

# Default retry policy
DEFAULT_MAX_ATTEMPTS=3
DEFAULT_RETRY_DELAYS=15,60,1440

# ==================== Celery Configuration (for background tasks) ====================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==================== Security ====================
# Encryption key for sensitive data (calendar tokens, etc.)
ENCRYPTION_KEY=your_32_byte_encryption_key_here_change_in_production

# ==================== Feature Flags ====================
ENABLE_CALENDAR_BOOKING=true
ENABLE_POST_CALL_AI=true
ENABLE_AUTO_RETRY=true
