# Production Environment Configuration
# Copy this file to .env and fill in your production values

# Environment
ENVIRONMENT=production

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=convis_production

# JWT Secret (Generate a strong secret!)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-change-this

# Encryption Key (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-here

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key

# Email Configuration
EMAIL_USER=noreply@yourcompany.com
EMAIL_PASS=your-email-password
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=465
SMTP_USE_SSL=true

# Frontend URL
FRONTEND_URL=https://app.yourcompany.com

# API Base URL (for webhook generation)
API_BASE_URL=https://api.yourcompany.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
